<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rotate -->
    <rotate android:fromDegrees="360" android:toDegrees="0"
        android:pivotX="50%" android:pivotY="50%" android:repeatCount="2"
        android:repeatMode="restart" android:duration="1500"
        android:interpolator="@android:anim/cycle_interpolator" />
    <!--  Left to right -->
    <!--<translate android:fromXDelta="-50%p" android:toXDelta="150%p"
        android:fromYDelta="100%p" android:toYDelta="0" android:duration="3000"
        android:interpolator="@android:anim/linear_interpolator" />-->
    <!--  Up and down bob -->
    <translate android:fromXDelta="0" android:toXDelta="0"
        android:fromYDelta="1500" android:toYDelta="0" android:repeatMode="restart"
        android:repeatCount="0" android:interpolator="@android:anim/linear_interpolator"
        android:duration="800" />
</set>